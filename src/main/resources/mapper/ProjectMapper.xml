<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springbootprojectmanagement.mapper.ProjectMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.springbootprojectmanagement.pojo.Project">
        <id column="id" property="id" />
        <result column="project_code" property="projectCode" />
        <result column="create_id" property="createId" />
        <result column="team_id" property="teamId" />
        <result column="project_name" property="projectName" />
        <result column="project_desc" property="projectDesc" />
        <result column="schedule" property="schedule" />
        <result column="begin_time" property="beginTime" />
        <result column="end_time" property="endTime" />
        <result column="is_private" property="isPrivate" />
        <result column="is_del" property="isDel" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, project_code, create_id, team_id, project_name, project_desc, schedule, begin_time, end_time, is_private, is_del
    </sql>

</mapper>
